.records.clearfix
  %strong.left
    Name:
    = link_to @pediatric.full_name, pediatrics_path 
  %br/
  %h4.left
  %table.both.table.table-striped.table-hover.table-bordered
    %thead
      %tr
        %th Date
        %th Vaccine Name
        %th Vaccination Session
        %th Booster
        %th Vaccination Type
        %th Actions
    - @immunizations.each do |immune|
      %tbody
        %tr{:class => cycle('odd', 'even')}
          %td= immune.created_at.strftime("%B %e, %Y")
          %td= immune.vaccination_name
          %td= immune.vaccination_session
          %td= immune.booster_session
          %td= immune.vaccination_type
          %td
            .btn-group
              = link_to raw('<i class="icon-pencil icons-black"></i>'),  {:action => 'edit', :id => immune.id, :pediatric_id => @pediatric.id }, remote: true, role: "button", :class => 'btn', :title => 'edit'
              = link_to raw('<i class="icon-trash icons-black"></i>'), {:action => 'destroy', :id => immune.id, :pediatric_id => @pediatric.id }, role: "button", remote: true, method: :delete, :class => 'btn', :title => 'delete', :confirm => 'Are you sure?'