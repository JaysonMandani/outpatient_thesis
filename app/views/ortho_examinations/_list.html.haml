.records.clearfix
  %strong.left
    Name:
    = link_to @orthodontic.full_name, orthodontics_path 
  %br/
  %h4.left
  %table.both.table.table-striped.table-hover.table-bordered
    %thead
      %tr
        %th Examination Date
        %th Examination Result
        %th Actions
    - @ortho_exams.each do |exam|
      %tbody
        %tr{:class => cycle('odd', 'even')}
          %td= exam.examination_date.to_date.strftime("%B %e, %Y")
          %td= exam.examination_result
          %td
            .btn-group
              = link_to raw('<i class="icon-pencil icons-black"></i>'),  {:action => 'edit', :id => exam.id, :orthodontic_id => @orthodontic.id }, remote: true, role: "button", :class => 'btn', :title => 'edit'
              = link_to raw('<i class="icon-trash icons-black"></i>'), {:action => 'destroy', :id => exam.id, :orthodontic_id => @orthodontic.id }, role: "button", remote: true, method: :delete, :class => 'btn', :title => 'delete', :confirm => 'Are you sure do you want to delete this record?'