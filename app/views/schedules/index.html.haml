- @page_title = "List of Schedules"
.container
  .header
    .left.subtitle
      %h1 Schedule
      %span
        %i.icon-list.icons-black
        List of Schedules
    = link_to raw('<i class="icon-plus-sign icons-black"></i>&nbsp;&nbsp;Add Record'), "#AddSched", "role" => "button", "data-toggle" => "modal", :class => 'btn btn-success right'
  .content.both
    .row
      .span12
        .records
          .tabble
            %ul.nav.nav-tabs
              %li.active= link_to "Scheduled List", "#calendar_scheduled", "data-toggle" => "tab"
              %li= link_to "Scheduled Calendar", "#scheduled_list", "data-toggle" => "tab"
            .tab-content
              #calendar_scheduled{'class' => 'tab-pane active'}
                #posts_list
                  = render(:partial => "list")
              #scheduled_list{'class' => 'tab-pane tabbable-with-border'}
                #calendar
                  = render(:partial => "calendar")
                
#AddSched{'class' => 'modal hide fade record'}
  = render(:partial => "form")

#EditSched{'class' => 'modal hide fade record'}
  = render(:partial => "form")

#ShowSched{'class' => 'modal hide fade record'}
  = render(:partial => "show")