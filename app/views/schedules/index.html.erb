<% @page_title = "List of Schedules" %>

  <div class="side-menu grid_5">
    <div class="side-menu-option">
      <%= render(:partial => 'sidenav') %>
    </div> <!-- end of side-menu-option -->
  </div> <!-- end of side-menu -->
  <div class="side-content grid_19">
    <div class="content-module">
      <div class="content-module-heading cf">
        <h3 class="grid_6"> LIST OF SCHEDULES </h3>

        <%= render(:partial => 'shared/search') %>

      </div> <!-- end of content-module-heading -->
      <div class="content-module-main">
        <table class="patients-record">
          <thead>
            <tr>
              <th>id</th>
              <th>name</th>
              <th>contact no.</th>
              <th>schedule for</th>
              <th>date</th>
              <th>time</th>
              <th>actions</th>
            </tr>
          </thead>
            <% @schedules.each do |sched| %>
          <tbody>
            <tr class="<%= cycle('odd', 'even')%>">
              <td><%= sched.id %></td>
              <td><%= sched.name %></td>
              <td><%= sched.contact_no %></td>
              <td><%= sched.schedule_for %></td>
              <td><%= sched.scheduled_on.to_date.strftime("%B %e, %Y") %></td>
              <td><%= sched.time.to_date.strftime("%I:%M %p") %></td>
              <td>
                <%= link_to("", {:action => 'edit', :id => sched.id }, :class => 'table-edit-button ic-table-edit', :title => "edit") %>
                <%= link_to("", {:action => 'delete', :id => sched.id, :method => :destroy, confirm: "Are you sure?" }, :class => 'table-delete-button ic-table-delete', :title => "delete") %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>  
          <div class="pagination">  
            <%= will_paginate @schedules, :container => true %>
          </div>
    </div> <!-- end of personal-information -->
        </div> <!-- end of content-module-main -->

      </div> <!-- end of content-module -->

  </div> <!-- end of page full width -->

