<%= error_messages_for(@inventory) %>

<div class="addrecord">

	<table>
		<tr>
			<td colspan="2"><h4>Inventory Form</h4></td>
		</tr>
		<tr>	
			<td><%= f.label(:brand_name, "Name") %></td>
			<td><%= f.text_field(:brand_name, :class=> 'input-large') %></td>
		</tr>
		<tr>	
			<td><%= f.label(:medical_name, "Medical Name") %></td>
			<td><%= f.text_field(:medical_name, :class=> 'input-large') %></td>
		</tr>
		<tr>	
			<td><%= f.label(:type, "Dose") %></td>
			<td><%= f.text_field(:type, :class=> 'input-large') %></td>
		</tr>
		<tr>	
			<td><%= f.label(:quantity) %></td>
			<td><%= f.select(:quantity, 1..100, { :include_blank => true }) %></td>
		</tr>
		<tr>	
			<td><%= f.label(:price) %></td>
			<td><%= f.text_field(:price, :class=> 'input-small') %></td>
		</tr>
	</table>

</div>