.records
  %h4.left
  = render(:partial => 'shared/search')
  %table.both.table.table-striped.table-hover.table-bordered
    %thead
      %tr
        %th Username
        %th Name
        %th Email
        %th Actions
    - @users.each do |user|
      %tbody
        %tr{:class => cycle('odd', 'even')}
          %td= user.username
          %td= user.name
          %td= mail_to(user.email)
          %td
            .btn-group
              = link_to raw('<i class="icon-pencil icons-black"></i>'), edit_user_path(user), remote: true, role: "button", :class => 'btn', :title => 'edit'
              = link_to raw('<i class="icon-trash icons-black"></i>'), user, remote: true, :confirm => 'Are you sure?', method: :delete, role: "button", :class => 'btn', :title => 'delete'