.records.clearfix
  %strong.left
    Name: 
    = @pediatric.full_name
  %br/
  %h4.left
  = render(:partial => 'shared/search')
  %table.both.table.table-striped.table-hover.table-bordered
    %thead
      %tr
        %th Date
        %th Vaccine Name
        %th Vaccination Session
        %th Booster
        %th Vaccination Type
        %th Actions
    - @immunizations.each do |immune|
      %tbody
        %tr{:class => cycle('odd', 'even')}
          %td= immune.created_at.strftime("%B %e, %Y")
          %td= immune.vaccination_name
          %td= immune.vaccination_session
          %td= immune.booster_session
          %td= immune.vaccination_type
          %td
            .btn-group
              = link_to raw('<i class="icon-eye-open icons-black"></i>'), immune, remote: true, role: "button", :class => 'btn', :title => 'view'
              = link_to raw('<i class="icon-pencil icons-black"></i>'), edit_immunization_path(immune), remote: true, role: "button", :class => 'btn', :title => 'edit'
              = link_to raw('<i class="icon-trash icons-black"></i>'), immune, role: "button", remote: true, :class => 'btn', :title => 'delete'