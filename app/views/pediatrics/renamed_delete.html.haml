- @page_title = "Delete Pedia Record"
.side-menu.grid_5
  .side-menu-option
    = render(:partial => 'pediatrics/sidenav')
  / end of side-menu-option
/ end of side-menu
.side-content.grid_19
  .content-module
    .content-module-heading.cf
      %h3 DELETE PATIENT RECORD
    / end of side-content-heading
    .content-module-main.cf
      .sub-heading
        %h4 Personal Information
      = form_for(:pediatric, :url => {:action => 'destroy', :id => @pediatric.id}) do |f|
        .personal-information-delete
          %p
            = label(:full_name, "Full Name: ")
            = @pediatric.full_name
            %br/
            = label(:birth_date, "Birth Date: ")
            = @pediatric.birth_date
            %br/
            = label(:sex, "Sex: ")
            = @pediatric.sex
            %br/
            = label(:age, "Age: ")
            = @pediatric.age
            %br/
            = label(:address, "Address: ")
            = @pediatric.address
            %br/
            = label(:contact_no, "Tel. no.: ")
            = @pediatric.contact_no
            %br/
            = label(:mother_name, "Mother's Name: ")
            = @pediatric.mother_name
            %br/
            = label(:m_occupation, "Mother's Occupation: ")
            = @pediatric.m_occupation
            %br/
            = label(:m_age, "Mother's Age: ")
            = @pediatric.m_age
            %br/
            = label(:father_name, "Father's Name: ")
            = @pediatric.father_name
            %br/
            = label(:f_occupation, "Father's Occupation: ")
            = @pediatric.f_occupation
            %br/
            = label(:f_age, "Father's Age: ")
            = @pediatric.f_age
            %br/
        = submit_tag("DELETE", {:class => 'button round blue text-upper image-right ic-delete', :onclick=> "return confirm('Are you sure?')"})
    / end of birthHistory-andDevelopment
  / end of content-module-main
/ end of content-module
/ end of side-content
