<% @page_title = "List of Pendings" %>

	<div class="side-menu grid_5">
		<div class="side-menu-option">
			<%= render(:partial => 'sidenav') %>
		</div> <!-- end of side-menu-option -->
	</div> <!-- end of side-menu -->
	<div class="side-content grid_19">
		<div class="content-module">
			<div class="content-module-heading cf">
				<h3 class="grid_6"> LIST OF PENDINGS </h3>

				<%= render(:partial => 'shared/search') %>

			</div> <!-- end of content-module-heading -->
			<div class="content-module-main">
				<table class="patients-record">
					<thead>
						<tr>
							<th>id</th>
							<th>name</th>
							<th>patient status</th>
							<th>pending for</th>
							<th>actions</th>
						</tr>
					</thead>
						<% @pendings.each do |pending| %>
					<tbody>
						<tr class="<%= cycle('odd', 'even')%>">
							<td><%= pending.id %></td>
							<td><%= pending.full_name %></td>
							<td><%= pending.patient_status %></td>
							<td><%= pending.pending_for %></td>
							<td>
								<%= link_to("", {:action => 'edit', :id => pending.id }, :class => 'table-edit-button ic-table-edit', :title => "edit") %>
								<%= link_to("", {:action => 'delete', :id => pending.id, :method => :destroy, confirm: "Are you sure?" }, :class => 'table-delete-button ic-table-delete', :title => "delete") %>
							</td>
						</tr>
						<% end %>
					</tbody>
				</table>	
					<div class="pagination">	
						<%= will_paginate @pendings, :container => false %>
					</div>
		</div> <!-- end of personal-information -->
				</div> <!-- end of content-module-main -->

			</div> <!-- end of content-module -->

	</div> <!-- end of page full width -->

