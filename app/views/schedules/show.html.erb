<% @page_title = "List of Schedules" %>

	<div class="side-menu grid_5">
		<div class="side-menu-option">
			<%= render(:partial => 'sidenav') %>
		</div> <!-- end of side-menu-option -->
		<div class="side-menu-calendar">
			<a href="#"><img src="../assets/calendar.png" alt="calendar"></a>
		</div>
	</div> <!-- end of side-menu -->
	<div class="side-content grid_19">
		<div class="content-module">
			<div class="content-module-heading cf">
				<h3 class="grid_6"> LIST OF SCHEDULES </h3>

				<%= render(:partial => 'shared/search') %>

			</div> <!-- end of content-module-heading -->
			<div class="content-module-main">
				<table class="patients-record">
					<thead>
						<tr>
							<th>id</th>
							<th>name</th>
							<th>contact no.</th>
							<th>schedule for</th>
							<th>date</th>
							<th>time</th>
							<th>actions</th>
						</tr>
					</thead>
					<tbody>
						<tr class="<%= cycle('odd', 'even')%>">
							<td><%= @schedules.id %></td>
							<td><%= @schedules.name %></td>
							<td><%= @schedules.contact_no %></td>
							<td><%= @schedules.schedule_for %></td>
							<td><%= @schedules.scheduled_on.to_date.strftime("%B %e, %Y") %></td>
							<td><%= @schedules.time.to_date.strftime("%I:%M %p") %></td>
							<td>
								<%= link_to("", {:action => 'edit', :id => @schedules.id }, :class => 'table-edit-button ic-table-edit', :title => "edit") %>
								<%= link_to("", {:action => 'delete', :id => @schedules.id, :method => :destroy, confirm: "Are you sure?" }, :class => 'table-delete-button ic-table-delete', :title => "delete") %>
							</td>
						</tr>
					</tbody>
				</table>	
		</div> <!-- end of personal-information -->
				</div> <!-- end of content-module-main -->

			</div> <!-- end of content-module -->

	</div> <!-- end of page full width -->

